---
import GitHub from "@/icons/GitHubIcon.astro";
import LinkButton from "./LinkButton.astro";
import Link from "@/icons/LinkIcon.astro";

const TAGS = {
  REACT: {
    name: "React.Js",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  MATERIAL: {
    name: "Material UI",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  REDUX: {
    name: "RTK",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  ROUTER: {
    name: "React Router DOM",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  HTML: {
    name: "HTML",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  CSS: {
    name: "CSS",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-gradient-to-r from-sky-500 to-indigo-500",
  },
};
const PROJECTS = [
  {
    title: "Journal App",
    description:
      "CRUD con React JS, React Router DOM, Firebase DB, Firebase Authentication, RTK, Material UI.",
    link: "https://journal-app-seven-ebon.vercel.app/",
    github: "https://github.com/santic93/journalApp",
    image: "/assets/journal.webp",
    tags: [TAGS.REACT, TAGS.MATERIAL, TAGS.REDUX, TAGS.FIREBASE, TAGS.ROUTER],
  },
  {
    title: "Food World",
    description:
      "Aplicacion Responsiva, desarrollada con React JS, React Router DOM, consumiendo la API themealdb.",
    link: "https://foods-ten-eta.vercel.app/",
    github: "https://github.com/santic93/foods",
    image: "/assets/food.webp",
    tags: [TAGS.REACT, TAGS.MATERIAL],
  },

  {
    title: "Trueno",
    description: "Pagina con HTML, CSS y JavaScript.",
    link: "https://trueno-nine.vercel.app/",
    github: "https://github.com/santic93/trueno",
    image: "/assets/trueno.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },

  {
    title: "Heroes",
    description:
      "Aplicacion Responsiva con React JS, React Router DOM, Context, Bootstrap, consumuiendo JSON local.",
    link: "https://hero-delta-one.vercel.app/",
    github: "https://github.com/santic93/journalApp",
    image: "/assets/hero.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP, TAGS.ROUTER],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="text-center align-middle relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-lg   sm:rounded-lg  md:group-hover:-translate-y-1 md:group-hover:shadow-2xl ">
            <img
              alt="imagen proyecto"
              class="object-cover object-top h-52 w-auto transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg ">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2 ">
            <ul class="flex flex-row mb-2 ">
              {tags.map((tag) => (
                <li class="ml-1 flex flex-wrap justify-center text-center align-middle">
                  <span
                    class={`rounded-md px-1 flex text-center text-opacity-90 text-sm ${tag.class} align-middle font-bold text-green-950 hover:bg-transparent hover:text-cyan-50 max-h-10 `}
                  >
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6 " />
                  Codigo
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Ir
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
